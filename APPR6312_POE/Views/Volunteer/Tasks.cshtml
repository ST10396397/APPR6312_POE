<!--IEnumerable<APPR6312_POE.Models.VolunteerTask-->
@model IEnumerable<APPR6312_POE.Models.TaskWithStatus>

@{
    ViewData["Title"] = "Available Volunteer Tasks";
}

<h2>@ViewData["Title"]</h2>

<!-- Create Task Form -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">Create New Task</div>
    <div class="card-body">
        <form asp-action="CreateTask" method="post">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Task Name</label>
                    <input name="TaskName" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Description</label>
                    <input name="TaskDescription" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Scheduled Date</label>
                    <input name="ScheduledDate" type="date" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Add Task</button>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Scheduled Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Task.TaskName</td>
                <td>@item.Task.TaskDescription</td>
                <td>@item.Task.ScheduledDate.ToShortDateString()</td>
                <td>@(item.IsAssigned ? "Assigned" : "Available")</td>
                <td>
                    @if (!item.IsAssigned)
                    {
                        <form asp-action="Assign" method="post">
                            <input type="hidden" name="taskId" value="@item.Task.TaskId" />
                            <input type="hidden" name="volunteerId" value="@ViewBag.VolunteerId" />
                            <button type="submit" class="btn btn-sm btn-success">Assign to Me</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>Assigned</button>
                    }
                    <!-- Delete button -->
                    <form asp-action="DeleteTask" method="post" style="display:inline;">
                        <input type="hidden" name="taskId" value="@item.Task.TaskId" />
                        <input type="hidden" name="volunteerId" value="@ViewBag.VolunteerId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this task?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
