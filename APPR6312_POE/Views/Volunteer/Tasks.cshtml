@model IEnumerable<APPR6312_POE.Models.VolunteerTask>

@{
    ViewData["Title"] = "Available Volunteer Tasks";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Scheduled Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>@task.ScheduledDate.ToShortDateString()</td>
                <td>@(task.IsAssigned ? "Assigned" : "Available")</td>
                <td>
                    @if (!task.IsAssigned)
                    {
                        <a asp-action="Assign" asp-route-volunteerId="1" asp-route-taskId="@task.Id" class="btn btn-sm btn-success">Assign to Me</a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>Assigned</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
