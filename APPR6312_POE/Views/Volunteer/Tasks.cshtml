@model IEnumerable<APPR6312_POE.Models.VolunteerTask>

@{
    ViewData["Title"] = "Available Volunteer Tasks";
}

<h2>@ViewData["Title"]</h2>

<!-- Create Task Form -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">Create New Task</div>
    <div class="card-body">
        <form asp-action="CreateTask" method="post">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Task Name</label>
                    <input name="TaskName" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Description</label>
                    <input name="TaskDescription" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Scheduled Date</label>
                    <input name="ScheduledDate" type="date" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Add Task</button>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Task</th>
            <th>Description</th>
            <th>Scheduled Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@task.TaskDescription</td>
                <td>@task.ScheduledDate.ToShortDateString()</td>
                <td>@(task.IsAssigned ? "Assigned" : "Available")</td>
                <td>
                    @if (!task.IsAssigned)
                    {
                        <!-- Replace 1 with actual logged-in volunteerId later -->
                        <a asp-action="Assign"
                           asp-route-volunteerId="1"
                           asp-route-taskId="@task.TaskId"
                           class="btn btn-sm btn-success">
                            Assign to Me
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>Assigned</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
